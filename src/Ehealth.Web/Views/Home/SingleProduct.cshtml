@using Ehealth.ViewModels.Product
@model SingleProductViewModel

@{
    ViewData["Title"] = "SingleProduct";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3 p-0">

            <h1 class="my-4">E-Health</h1>
            <div class="list-group">

                <a class="list-group-item p-3 text-center" asp-area="" asp-controller="Category" asp-action="Category" asp-route-id="All">All Products</a>

            </div>

            <partial name="_HomeNavButtonsPartial" />

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9 p-0 pl-3">

            <div class="mt-4">
                <div class="row">
                    <img class="card-img-top img-fluid w-50 p-5" src="@Model.ProductUrl" alt="">
                    <div class="container w-50 p-0">
                        <h2 class="mt-5">@Model.Name</h2>
                        <h3 class="mt-5">$ @Model.Price</h3>
                        <h5 class="mt-3">Current Quantity: @Model.Quantity</h5>

                        <div class="row justify-content-between mt-4 mr-5 pr-5">
                            <div class="dropdown show">
                                <a class="btn text-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @if (Model.Quant == 0)
                                    {
                                        @Html.Raw("Select Quantity");
                                    }
                                    else
                                    {
                                        @Html.Raw(Model.Quant);
                                    }

                                </a>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

                                    @for (int i = 1; i <= Model.Quantity; i++)
                                    {
                                        <a class="dropdown-item" asp-controller="Home" asp-action="SingleProduct" asp-route-Quant="@i">@i</a>
                                    }

                                </div>
                            </div>


                            <form asp-controller="Home" asp-action="SingleProduct" asp-route-Quant=@Model.Quant method="post">
                                <input class="btn btn-success" type="submit" value="Order NOW" />
                            </form>
                        </div>

                        <div class="row">
                            <div class="row m-3">
                                <span asp-validation-for="Quant" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="card-body">

                    <p class="card-text mt-5">@Model.Description</p>

                </div>
            </div>

        </div>


    </div>
</div>
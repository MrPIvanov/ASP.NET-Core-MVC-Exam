
@{
    ViewData["Title"] = "Messages";
}

    <h1 class="text-center">You can ask us everything you want to know</h1>

<div class="container w-100 mt-5">
    <div id="message-holder" class="mt-3 d-flex justify-content-center">
        <h4 class="m-0">You message: </h4>
        <input class="w-50 ml-5 mr-5 pl-3" type="text" id="messageInput" placeholder="Message..." />
        <button id="sendButton" class="btn btn-primary">Send</button>
    </div>
    <hr class="mt-5" />
    <div id="messagesList" style="font-size: 23px;">
    </div>
</div>

@section Scripts {
    <script src="~/js/livechat.js"></script>
}
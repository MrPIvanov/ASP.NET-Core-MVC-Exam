@using Ehealth.BindingModels.Category
@model AddNewCategoryBindingModel

@{
    ViewData["Title"] = "CategoryAddNew";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3 p-0">

            <h1 class="my-4">E-Health</h1>
            <h2 class="my-4">Admin Area</h2>

            <partial name="_AdminNavButtonsPartial" />

        </div>

        <div class="col-lg-9 p-0 pl-3 text-center mt-5">
            <h2>Add New Category</h2>

            <form asp-controller="Admin" asp-action="CategoryAddNew" method="post">

                <div class="form-group m-5">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <input class="btn btn-primary" type="submit" />
            </form>
        </div>
    </div>
</div>
@using  Ehealth.Models
@using Ehealth.BindingModels.Product
@model AddNewProductBindingModel

@{
    ViewData["Title"] = "ProductAddNew";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3 p-0">

            <h1 class="my-4">E-Health</h1>
            <h2 class="my-4">Admin Area</h2>

            <partial name="_AdminNavButtonsPartial" />

        </div>

        <div class="col-lg-9 p-0 pl-5  text-center mt-5">
            <h2>Add New Product</h2>
            <form asp-controller="Admin" asp-action="ProductAddNew" method="post">

                <div class="m-5">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="m-5">
                    <label asp-for="ProductUrl"></label>
                    <input asp-for="ProductUrl" class="form-control" />
                    <span asp-validation-for="ProductUrl" class="text-danger"></span>
                </div>


                <div class="m-5">
                    <label asp-for="Price"></label>
                    <input type="number" step="0.01" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                

                <div class="m-5">
                    <label asp-for="CategoryIdString"></label>
                    <select asp-for="CategoryIdString" class="form-control">
                        @foreach (var categoryName in (List<Category>)@ViewData["categoryTypes"])
                        {
                        <option value="@categoryName.Id">@categoryName.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryIdString" class="text-danger"></span>
                </div>

                <input class="btn btn-primary" type="submit" />
            </form>
        </div>
    </div>
</div>

@using Ehealth.ViewModels.Blog
@model List<BlogSingleViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 pl-3">

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="2222">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img style="height: 730px" src="https://images.unsplash.com/photo-1471864190281-a93a3070b6de?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="text-dark font-weight-bold">Pills</h3>
                        <h5 class="text-dark">Pills are good, but to many can hurt your health</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img style="height: 730px" src="https://images.unsplash.com/photo-1522184216316-3c25379f9760?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="text-dark font-weight-bold">Vegetables</h3>
                        <h5 class="text-dark">Vegetables are greath mix of calories and vitamins</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img style="height: 730px" src="https://images.unsplash.com/photo-1527634311077-9943f7df34e1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1355&q=80" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="text-dark font-weight-bold">Training</h3>
                        <h5 class="text-dark">Training can give you big improvement to your health</h5>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<h2 class="text-center m-5">Our Recent Blog Articles</h2>

@foreach (var blog in Model)
{
    <div class="card mt-5 mb-5">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <a asp-area="Blog" asp-controller="Blog" asp-action="SingleBlog" asp-route-id="@blog.Id"><img class="img-fluid rounded" src="@blog.ImageUrl" alt=""></a>
                </div>
                <div class="col-lg-6">
                    <h2 class="card-title">@blog.Title</h2>
                    <p class="card-text">@blog.SubTitle</p>
                    <a class="btn btn-info" asp-area="Blog" asp-controller="Blog" asp-action="SingleBlog" asp-route-id="@blog.Id">Read More &rarr;</a>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            Posted on @blog.PublishOn.ToString("dddd, MMMM d, yyyy") by
            <a class="text-primary">@blog.Author</a>
        </div>
    </div>
}